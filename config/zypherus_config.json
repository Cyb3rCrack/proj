{
  "memory": {
    "max_total_entries": 50000,
    "max_entries_per_source": 5000,
    "use_faiss": true,
    "faiss_metric": "inner_product",
    "embedding_dim": 384,
    "compression_enabled": true,
    "compression_quality": 80,
    "persistence_path": "memory.json",
    "auto_save_interval_s": 300.0
  },
  "claims": {
    "max_claims": 10000,
    "decay_half_life_days": 45.0,
    "inference_weight": 0.60,
    "max_inferred_per_cycle": 25,
    "confidence_threshold_high": 0.70,
    "confidence_threshold_medium": 0.50,
    "confidence_threshold_low": 0.30,
    "nli_contradiction_threshold": 0.80,
    "persistence_path": "data/knowledge/claims.json",
    "auto_save_interval_s": 300.0
  },
  "distiller": {
    "max_facts": 10,
    "fact_char_limit": 500,
    "summary_char_limit": 300,
    "max_entities": 20,
    "workers": 3,
    "cache_ttl_s": 3600.0,
    "cache_max_entries": 100,
    "max_tokens_extraction": 500,
    "timeout_s": null
  },
  "embedding": {
    "model_name": "all-MiniLM-L6-v2",
    "normalize": true,
    "cache_embeddings": true,
    "cache_max_size": 1000,
    "batch_size": 64,
    "device": "cpu"
  },
  "fast_ingest": {
    "enabled": true,
    "profile": "safe",
    "chunk_size_default": 600,
    "chunk_size_web": 900,
    "skip_distiller": true,
    "skip_relationships": true,
    "skip_entities": true,
    "skip_fact_extraction": true
  },
  "llm": {
    "provider": "ollama",
    "model_name": "neural-chat",
    "base_url": "http://localhost:11434",
    "api_key": null,
    "timeout_s": 60.0,
    "max_retries": 3,
    "retry_delay_s": 2.0,
    "fallback_mode": "heuristic",
    "cache_enabled": true,
    "cache_ttl_s": 3600.0
  },
  "dialogue": {
    "max_turns": 6,
    "max_history_chars": 5000,
    "coherence_check_enabled": true,
    "repair_strategy": "clarify",
    "context_window_size": 3
  },
  "concept_graph": {
    "max_nodes": 50000,
    "max_edges_per_node": 100,
    "relationship_types": ["is-a", "part-of", "causes", "similar-to", "opposite-of", "related-to"],
    "cooccurrence_threshold": 0.3,
    "semantic_similarity_threshold": 0.6
  },
  "extraction": {
    "chunk_size": 500,
    "min_chunk_size": 50,
    "max_chunk_size": 1000,
    "sentence_splitter": "spacy",
    "use_nlp_for_concepts": true,
    "nlp_model": "en_core_web_sm"
  },
  "reasoning": {
    "enable_causal_reasoning": true,
    "enable_contradiction_detection": true,
    "enable_domain_reasoning": true,
    "max_reasoning_depth": 5,
    "confidence_propagation_factor": 0.85,
    "rule_conflict_strategy": "weighted_majority"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_path": null,
    "file_size_mb": 10,
    "backup_count": 5,
    "telemetry_enabled": true
  }
}
