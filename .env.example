# Zypherus Production Environment Configuration
# Copy this to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here-min-32-chars
DEBUG=false
LOG_LEVEL=INFO

# Authentication & Security (REQUIRED in production)
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
API_KEYS=  # CSV format: key1:user1:admin,key2:user2:user

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=*

# Request Validation & Security
MAX_REQUEST_SIZE=10485760  # 10MB in bytes
MAX_JSON_SIZE=5242880     # 5MB in bytes

# Query Caching
CACHE_TTL_SECONDS=3600    # 1 hour cache validity
CACHE_MAX_SIZE=1000       # Max cached queries

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here

# Collection Settings (optional for production)
PHASE1_REPOS=kubernetes/kubernetes,golang/go
MAX_PRS_PER_REPO=50
COLLECTION_OUTPUT_DIR=training_data/phase1

# Memory/Storage
MEMORY_PATH=./memory.json
MEMORY_FAISS_PATH=./memory.faiss
ENABLE_MEMORY_PERSISTENCE=true

# Error Tracking & Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACE_RATE=0.1

# Production Server
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=120
